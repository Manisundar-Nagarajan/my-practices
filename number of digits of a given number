// To display the number of digits of a given number
#include<stdio.h>
int main()
{
        int count=0, n;
        printf(" Enter the value: ");
        scanf("%d", &n);
        while(n>0)
        {
                n=n/10;
                count++;
        }
        printf("Number of digits in the given number is:%d\n", count);
}

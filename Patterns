#include <stdio.h>
int main()
{
    int i, j, n, k, l;
    printf("Enter the number of rows: ");
    scanf("%d", &n);
    for(i=0;i<n;i++)
    {
        k=i+1;
        l=n-1;
        for(j=0;j<=i;j++)
        {
            printf("%d ", k);
            k=k+l;
            l--;
        }
        printf("\n");
    }
}
Output:
Enter the number of rows: 5
1
2 6
3 7 10
4 8 11 13
5 9 12 14 15


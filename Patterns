#include <stdio.h>
int main()
{
    int i, j, n, k;
    printf("Enter the number of rows: ");
    scanf("%d", &n);
    for(i=0;i<n;i++)
    {
        k=1;
        for(j=0;j<(n-i);j++)
            printf("%d", k++);
        printf("\n");
    }
}

Output:
Enter the number of rows: 6
123456
12345
1234
123
12
1

// To check the given number is an armstrong number or not
#include<math.h>
int main()
{
        int num, k, m, count=0, y, result=0;
        printf("Enter the number: ");
        scanf("%d", &num);
        m=num;
        while(m!=0)
        {
                m=m/10;
                count++;
        }
        m=num;
        while(m!=0)
        {
                k=m%10;
                result+=pow(k,count);
                m=m/10;
        }
        if(result==num)
                printf("The given number %d is an armstrong number\n", result);
        else
                printf("The given number %d is not an armstrong number\n", result);
}

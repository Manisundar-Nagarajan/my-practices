// To display the perfect numbers from 1 to 100000
#include<stdio.h>
int main()
{
        int i, n, sum;
        for(n=1;n<1000;n++)
        {
                sum=0;
                for(i=1;i<n;i++)
                {
                        if(n%i==0)
                        sum=sum+i;
                }
                if(sum==n)
                printf("%d  ", sum);
        }
}


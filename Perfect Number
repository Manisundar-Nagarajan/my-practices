// To check the given number is a perfect numbers or not
#include<stdio.h>
int main()
{
        int i, n, sum=0;
        printf("Enter the vlue: ");
        scanf("%d", &n);
        for(i=1;i<n;i++)
        {
        if(n%i==0)
        sum=sum+i;
        }
        if(n==sum)
        {
                printf("Perfect number\n", sum);
        }
        else
        {
                printf("Not a perfect number\n", sum);
        }
}


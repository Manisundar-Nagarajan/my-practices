// To reverse the entire binary number//
#include<stdio.h>
int main()
{
        int p1=0, p2=31, x, y, num;
        for(;p2>p1;p1++)
                {
                        x=num>>p1&1;
                        y=num>>p2&1;
                        if(x!=y)
                        {
                                num=num^(1<<p1);
                                num=num^(1<<p2);
                        }
                        p2--;
                }
        printf("%d", num);
}



// To swap the particular bits of a number//
#include<stdio.h>
int main()
{
        int x, y, num, pos1, pos2;
        printf("Enter the value: ");
        scanf("%d", &num);
        printf("Position1 is: ");
        scanf("%d", &pos1);
        printf("Position2 is: ");
        scanf("%d", &pos2);
        x=num>>pos1&1;
        y=num>>pos2&1;
        if(x==y)
                return num;
        else
        {
                num=num^(1<<pos1);
                num=num^(1<<pos2);
                printf("%d", num);
        }
}



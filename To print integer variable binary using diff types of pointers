//To print integer variable binary using diff types of pointers (short int pointer)
#include<stdio.h>
int main()
{
        int num, i, j;
        printf("Enter the number: ");
        scanf("%d", &num);
        short int *p=&num;
        for(j=1;j>=0;j--)
        {
        for(i=15;i>=0;i--)
        {
                printf("%d", *(p+j)>>i&1);
        }
}

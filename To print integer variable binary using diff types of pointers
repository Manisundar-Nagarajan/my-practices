//To print double variable binary using diff types of pointers (char pointer)
#include<stdio.h>
int main()
{
        double num;
        printf("Enter the number: ");
        scanf("%lf", &num);
        char *p=&num;
        for(int j=7;j>=0;j--)
        {
        for(int i=7;i>=0;i--)
        {
                printf("%d",*(p+j)>>i&1);
        }
        }
}


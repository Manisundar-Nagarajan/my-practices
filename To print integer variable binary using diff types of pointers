//To print float variable binary using diff types of pointers (char pointer)
#include<stdio.h>
int main()
{
        float num;
        printf("Enter the number: ");
        scanf("%f", &num);
        char *p=&num;
        for(int j=3;j>=0;j--)
        {
        for(int i=7;i>=0;i--)
        {
                printf("%d",*(p+j)>>i&1);
        }
        }
}

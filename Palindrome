// To check the given number is palindrome or not
#include<stdio.h>
int main()
{
        int rem=0, rev, n, m;
        printf("Enter the value: ");
        scanf("%d", &n);
        m=n;
        while(n!=0)
        {
                rev=n%10;
                rem=rem*10+rev;
                n=n/10;
        }
        if(m==rem)
                printf("The given number is a palindrome\n");
        else
                printf("The given number is not a palindrome\n");
        return 0;
        }


// To display No. of even and odd numbers in given value
#include<stdio.h>
int main()
{
        int n, m, count, even=0, odd=0;
        printf("Enter the value: ");
        scanf("%d", &n);
        while(n!=0)
        {
                count=n%10;
                if(count%2==0)
                        even++;
                else
                        odd++;
                n=n/10;
        }
        printf("Number of even digits are: %d\n", even);
        printf("Number of odd digits are: %d\n", odd);
        return 0;
}

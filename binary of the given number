// To display the binary of th given number
#include<stdio.h>
int main()
{
        int num, i;
        printf("Enter the Number: ");
        scanf("%d", &num);
        int bit=(sizeof(num)*8)-1;
        for(i=bit;i>=0;i--)
        {
                printf("%d", (num>>i)&1);
        }
        printf("\n");
}
